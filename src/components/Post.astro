---
import Navbar from './Navbar.astro';

export interface Props {
    icon: string;
    title: string;
    description: string;
    href: string;
    lines: number;
}

const { icon, title, description, href, lines } = Astro.props;
---

<a href={href} 
   class="flex flex-wrap gap-3 items-center justify-between max-w-[960px] w-full p-3 rounded-md border border-white">
    <div class="flex items-center gap-3">
        <h1 class="text-[50px] sm:text-[40px]">{icon}</h1>
        <div class="flex flex-col">
            <h1 class="font-extrabold text-lg sm:text-xl">{title}</h1>
            <p class="text-sm sm:text-base text-gray-500">{description}</p>
        </div>
    </div>
    <h1 class="text-sm sm:text-md text-gray-500">{`Lines: ${lines}`}</h1>
</a>
